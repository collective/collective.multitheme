<?xml version="1.0" encoding="utf-8"?>
<rules xmlns="http://namespaces.plone.org/diazo"
       xmlns:css="http://namespaces.plone.org/diazo/css"
       xmlns:xhtml="http://www.w3.org/1999/xhtml"
       xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
       xmlns:xi="http://www.w3.org/2001/XInclude">

  <rules if="$default">
	 <xi:include href="++theme++multitheme/default.xml"/>
	</rules>

  <rules if="$spot">
	 <xi:include href="++theme++multitheme/spot.xml"/>
	</rules>

  <rules if="$head">
   <xi:include href="++theme++multitheme/head_rules.xml"/>
  </rules>

	<after theme-children="/html/head" >
		<link href="++theme++multitheme/less/{$cssfile}/theme.css" rel="stylesheet"/>
    <style>
      .custom-color1 {
      color: $color1
      }
      .custom-color2 {color: $color2}
      .custom-color3 {color: $color3}
      .custtom-background1 {background-color: $color1}
      .custtom-background2 {background-color: $color2}
      .custtom-background3 {background-color: $color3}
    </style>
	</after>
</rules>
