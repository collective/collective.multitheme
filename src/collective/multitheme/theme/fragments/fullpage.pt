<div id="fullpagewrapper">
<ul id="menu">
    <li data-menuanchor="firstPage" class="active"><a href="#firstPage">First slide</a></li>
    <li data-menuanchor="secondPage"><a href="#secondPage">Second slide</a></li>
    <li data-menuanchor="3rdPage"><a href="#3rdPage">Third slide</a></li>
</ul>

<div id="fullpage">
    <div class="section " id="section0">
        <div class="intro">
            <img src="imgs/1.png"  alt="1"/>
            <h1>Normal scrolling</h1>
            <p>With a linked menu</p>
        </div>
    </div>
    <div class="section" id="section1">
    
        <div class="slide" id="slide1">
            <div class="intro">
                <h1>URL get updated (#)</h1>
                <p>
                    Easy to bookmark and share
                </p>
            </div>
        </div> 

        <div class="slide" id="slide2">
            <h1>Horizontal sliders!</h1>
            <img src="imgs/iphone-blue.png" alt="iphone" id="iphone-two" />
        </div>

    </div>
    <div class="section" id="section2">
        <div class="intro">
            <h1>Just use </h1>
            <p>autoScrolling:false</p>
        </div>
    </div>
    
 
  <script>require([
      'jquery',
      '++theme++multitheme/javascript/scrolloverflow.min',
      '++theme++multitheme/javascript/jquery.fullpage'
      ], function(Base) {
      $('#fullpage').fullpage({
                menu: '#menu',
                sectionsColor: ['#1bbc9b', '#4BBFC3', '#7BAABE', 'whitesmoke', '#ccddff'],
                navigation: true,
				navigationPosition: 'right',
				anchors: ['firstPage', 'secondPage', '3rdPage'],
                slidesNavigation: false,
            });
      });
  </script>


 
    
      <tal:define tal:define="load_css python:context.portal_registry['collective.multitheme.interfaces.ICollectiveMultiThemeSettings.load_css'] or '';">
    <link rel="stylesheet" href="++theme++multitheme/css/jquery.fullpage.css" tal:condition="load_css">
  </tal:define>
  
</div>
</div>
 