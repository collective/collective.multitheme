<ul id="fullpagemenu"></ul>
  <script>require([
      'jquery',
      'https://cdnjs.cloudflare.com/ajax/libs/fullPage.js/2.9.5/jquery.fullpage.js'
      ], function(Base) {
      $(document).ready(function() {
        var array = [];
        $('[id^=fragment]').each(function() {
          var fragment_title = $(this).attr('title') ||Â $(this).attr('id') ;
          array.push(fragment_title);
          $( "#fullpagemenu" ).append( "<li data-menuanchor='#" + fragment_title + "'><a href='#" + fragment_title + "'>" + fragment_title + "</a></li>" );
        });
        $('.viewpermission-none #content').fullpage({
          navigation: true,
          paddingTop:0,
		      paddingBottom: '0',
          menu: '#fullpagemenu',
          anchors: array,
          fixedElements: '#fullpagemenu, #mainnavigation, #portal-footer-wrapper',
          responsiveWidth: 1000,
		      sectionSelector: '.mosaic-grid-row section'});
        });
      });
  </script>
  <link rel="stylesheet" href="++theme++multitheme/css/fullpage_menu.css">
