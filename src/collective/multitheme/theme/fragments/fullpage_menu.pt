<ul id="fullpagemenu"></ul>
  <script>require([
      'jquery',
      'https://cdnjs.cloudflare.com/ajax/libs/fullPage.js/2.9.5/jquery.fullpage.js'
      ], function(Base) {
      $(document).ready(function() {
        var $array = [];
        $('[id^=fragment]').each(function() {
          var fragment_id = $(this).attr('id') ;
          $array.push(fragment_id);
          var fragment_title = $(this).attr('title') ||Â $(this).attr('id') ;
            $( "#fullpagemenu" ).append( "<li data-menuanchor='#" + fragment_id + "'><a href='#" + fragment_id + "'>" + fragment_title + "</a></li>" );
        });
        $('.viewpermission-none #content').fullpage({
          navigation: true,
		      paddingBottom: '100px',
          menu: '#fullpagemenu',
          anchors: $array,
          fixedElements: '#fullpagemenu, #mainnavigation',
          responsiveWidth: 1100,
		      sectionSelector: '.mosaic-grid-row section'});
        });
      });
  </script>
  <link rel="stylesheet" href="++theme++multitheme/css/fullpage_menu.css">
