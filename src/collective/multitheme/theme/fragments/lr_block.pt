<section tal:define="scale view/data/image_size;
                title view/data/title | nothing;
                image view/one_image;
                image_url image/getURL;
                css_class view/data/css_class">
 <div class="flex ${css_class}">
    <div class="half bodytext">
        <h3>${title}</h3>
        <p>${view/data/text}</p>
    </div>
    <div class="half image">
        <img    alt="${title}"
                     title="${title}"
                     src="${image_url}/@@images/image/${scale}" />
    </div>
 </div>
 <link rel="stylesheet" href="++theme++multitheme/css/lr_block.css">
</section>