<section id="fragment-${view/id}" class="accordion-block ${view/data/color1}" >
  <a href="#" class="accordian_title accordion toggle">
        <i class="fa fa-bars" aria-hidden="true"></i><h3>${view/data/title}</h3>
  </a>
 <div class="accordiondiv">${view/data/text}</div>
  <script>require([
      'jquery'
      ], function(Base) {
        $("#fragment-${view/id} .accordian_title").click(function() {
            $('.accordiondiv').toggle();
        });
      });
  </script>
  <link rel="stylesheet" href="++theme++multitheme/css/accordian.css">
</section>
