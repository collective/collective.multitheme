<model xmlns:form="http://namespaces.plone.org/supermodel/form"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xmlns:indexer="http://namespaces.plone.org/supermodel/indexer"
  xmlns:lingua="http://namespaces.plone.org/supermodel/lingua"
  xmlns:marshal="http://namespaces.plone.org/supermodel/marshal"
  xmlns:security="http://namespaces.plone.org/supermodel/security"
  xmlns:users="http://namespaces.plone.org/supermodel/users"
  xmlns="http://namespaces.plone.org/supermodel/schema">
<schema>
  <field name="title1" type="zope.schema.TextLine">
    <description/>
    <required>True</required>
    <title>Subttile</title>
  </field>
  <field name="title2" type="zope.schema.TextLine">
    <description/>
    <required>True</required>
    <title>Title</title>
  </field>
  <field name="buttontext" type="zope.schema.TextLine">
    <description/>
    <required>True</required>
    <default>MORE INFO</default>
    <title>Buttontext</title>
  </field>
  <field name="url" type="zope.schema.URI">
    <description/>
    <required>True</required>
    <title>Button link</title>
  </field>
  <field name="style" type="zope.schema.Choice">
      <description/>
      <required>True</required>
      <title>Style</title>
      <values>
        <element>center-style</element>
        <element>right-style</element>
        <element>left-style</element>
        <element>gradient-style</element>
        <element>fullwidth right-style</element>
        <element>fullwidth left-style</element>
        <element>fullwidth gradient-style</element>
      </values>
    </field>
  <field name="color1" type="zope.schema.Choice">
      <description/>
      <required>True</required>
      <default>plone-background</default>
      <title>Background color</title>
      <values>
        <element>grey-background</element>
        <element>black-background</element>
        <element>white-background</element>
        <element>plone-background</element>
        <element>plone-background-2</element>
        <element>plone-background-3</element>
        <element>plone-background-opposite</element>
        <element>custom-background1</element>
        <element>custom-background2</element>
        <element>custom-background3</element>
      </values>
    </field>
    <field name="color2" type="zope.schema.Choice">
        <description/>
        <required>True</required>
        <title>Color 2</title>
        <values>
          <element>white</element>
          <element>black</element>
          <element>plone-link</element>
          <element>plone-link-2</element>
          <element>plone-link-3</element>
          <element>plone-link-opposite</element>
          <element>custom-color1</element>
          <element>custom-color2</element>
          <element>custom-color3</element>
        </values>
      </field>
      <field name="color3" type="zope.schema.Choice">
          <description/>
          <required>True</required>
          <default>white</default>
          <title>Title color</title>
          <values>
            <element>black</element>
            <element>white</element>
            <element>plone-link</element>
            <element>plone-link-2</element>
            <element>plone-link-3</element>
            <element>plone-link-opposite</element>
            <element>custom-color1</element>
            <element>custom-color2</element>
            <element>custom-color3</element>
          </values>
        </field>
        <field name="color4" type="zope.schema.Choice">
            <description/>
            <required>True</required>
            <title>Button Color</title>
            <default>plone-background-3</default>
            <values>
                <element>grey-background</element>
                <element>black-background</element>
                <element>white-background</element>
                <element>plone-background</element>
                <element>plone-background-2</element>
                <element>plone-background-3</element>
                <element>plone-background-opposite</element>
                <element>custom-background1</element>
                <element>custom-background2</element>
                <element>custom-background3</element>
            </values>
        </field>
        <field name="color5" type="zope.schema.Choice">
            <description/>
            <required>True</required>
            <default>black</default>
            <title>Button text color</title>
            <values>
              <element>black</element>
              <element>white</element>
              <element>plone-link</element>
              <element>plone-link-2</element>
              <element>plone-link-3</element>
              <element>plone-link-opposite</element>
              <element>custom-color1</element>
              <element>custom-color2</element>
              <element>custom-color3</element>
            </values>
        </field>
        <field name="effect" type="zope.schema.Choice">
            <description/>
            <required>True</required>
            <title>Effect</title>
            <values>
              <element>no-effects</element>
              <element>shadow</element>
              <element>emboss</element>
              <element>zoom</element>
              <element>textzoom</element>
              <element>buttonzoom</element>
              <element>shadow zoom</element>
              <element>shadow textzoom</element>
              <element>emboss zoom</element>
              <element>emboss textzoom</element>
            </values>
          </field>
  </schema>
</model>
